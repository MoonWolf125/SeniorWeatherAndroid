<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat" parent="Base.TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Headline" parent="Base.TextAppearance.AppCompat.Headline">
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Headline.White" parent="AppTheme.TextAppearance.AppCompat.Headline">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Display4" parent="Base.TextAppearance.AppCompat.Display4">
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Display4.Black" parent="AppTheme.TextAppearance.AppCompat.Display4">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Display3" parent="Base.TextAppearance.AppCompat.Display3">
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Display3.Black" parent="AppTheme.TextAppearance.AppCompat.Display3">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Display2" parent="Base.TextAppearance.AppCompat.Display2">
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Display2.Black" parent="AppTheme.TextAppearance.AppCompat.Display2">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Display1" parent="Base.TextAppearance.AppCompat.Display1">
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Display1.Black" parent="AppTheme.TextAppearance.AppCompat.Display1">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <!--Body2 is the same as Body1-->
    <style name="AppTheme.TextAppearance.AppCompat.Body1" parent="Base.TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Body1.White" parent="AppTheme.TextAppearance.AppCompat.Body1">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Caption" parent="Base.TextAppearance.AppCompat.Caption">
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Caption.Black" parent="AppTheme.TextAppearance.AppCompat.Caption">
        <item name="android:textColor">@color/textColorPrimary</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Button" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:fontFamily">@font/source_serif_pro</item>
    </style>

    <style name="AppTheme.TextAppearance.AppCompat.Button.White" parent="AppTheme.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/textColorSecondary</item>
    </style>

</resources>
